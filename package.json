{
  "name": "youtube-monster-scanner",
  "version": "1.1.0",
  "description": "An application that analyzes YouTube videos for negative speech and behavioral patterns using AI.",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build && npx serve public -p 3000",
    "dev:watch": "npm run build && npx serve public -p 3000",
    "build": "esbuild index.tsx --bundle --outfile=public/bundle.js --jsx=transform && copyfiles -f index.html public",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "@google/genai": "^1.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vercel/node": "^3.1.5",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.23.0",
    "serve": "^14.2.4",
    "typescript": "^5.4.5",
    "vercel": "^34.2.0"
  }
}
